<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        tools:context=".MainActivity">

    <RadioGroup
            android:id="@+id/input_type"
            android:layout_marginTop="20dp"
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:background="@color/gray"
            android:orientation="horizontal">
        <RadioButton
                android:id="@+id/input_type_tun"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tun 模式" />
        <RadioButton
                android:id="@+id/input_type_socks5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Socks5 模式" />
    </RadioGroup>

    <EditText
            android:id="@+id/input_ip"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="45dp"
            android:background="@color/gray"
            android:hint="@string/activity_main_ip_hits"
            android:paddingStart="6dp"
            tools:ignore="MissingConstraints"></EditText>

    <EditText
            android:id="@+id/input_port"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/gray"
            android:hint="@string/activity_main_port_hits"
            android:paddingStart="6dp"
            tools:ignore="MissingConstraints"></EditText>


    <EditText
            android:id="@+id/input_username"
            android:inputType="text"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/gray"
            android:hint="@string/activity_main_name_hits"
            android:paddingStart="6dp"
    ></EditText>

    <EditText
            android:id="@+id/input_password"
            android:layout_marginTop="20dp"
            android:inputType="numberPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/gray"
            android:hint="@string/activity_main_passwd_hits"
            android:paddingStart="6dp"
    ></EditText>

    <Button
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:textSize="16dp"
            android:text="@string/activity_main_select_app"
            android:paddingLeft="6dp"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black_overlay"
            android:gravity="left|center"
            android:onClick="handleAllowApp"
    ></Button>

    <Button
            android:id="@+id/handle_start"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="50dp"
            android:onClick="handleStart"
            android:text="连接"
    ></Button>

    <Button
            android:id="@+id/handle_stop"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:onClick="handleStop"
            android:text="断开"
    ></Button>

</androidx.appcompat.widget.LinearLayoutCompat>